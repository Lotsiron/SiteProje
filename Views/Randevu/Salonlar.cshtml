@model List<WebApplication1.Models.Salon>

<link rel="stylesheet" href="~/css/salonlar.css" />

<h1>@(ViewBag.salonTur == "Kadın" ? "Kadın Salonlar" : "Erkek Salonlar")</h1>

<div class="salons-grid">
    @foreach (var salon in Model)
    {
        <div class="salon-card" onclick="showSalonDetails(@salon.id)">
            <h2>@salon.ad</h2>
            <p><i class="fas fa-clock"></i> @salon.acilis_saati - @salon.kapanis_saati</p>
            <p><i class="fas fa-cut"></i> @salon.tur</p>
        </div>
    }
</div>

<!-- Salon hizmetleri modalı -->
<div id="salonModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <div id="salonBilgileri"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/salonlar.js"></script>
}